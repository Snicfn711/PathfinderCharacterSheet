<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.RecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/StatsRecycler"
        android:name="com.pathfinderstattracker.pathfindercharactersheet.viewmodels.SkillsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.pathfinderstattracker.pathfindercharactersheet.viewmodels.SkillsFragment"
        tools:listitem="@layout/skill_row_view"
        app:layout_constraintBottom_toTopOf="@id/BottomBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="10"/>
    <LinearLayout
        android:id="@+id/BottomBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorTransparentHeader"
        android:layout_weight=".5">
        <ImageButton android:id="@+id/SortByIsClassSkill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/sort_icon"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_weight=".11"
            android:contentDescription="@string/SortByClassSkills" />
        <TextView android:id="@+id/TotalRanks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/colorGoldText"
            android:layout_weight=".33"/>
        <TextView android:id="@+id/FavoredClassRanks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/colorGoldText"
            android:layout_weight=".33" />
        <ImageButton android:id="@+id/SortByRanks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/sort_icon"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_weight=".11"
            android:contentDescription="@string/SortByTotalRanks" />
        <ImageButton android:id="@+id/AddNewSkill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/add_icon"
            android:layout_weight=".11"
            android:contentDescription="@string/AddNewSkill" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
