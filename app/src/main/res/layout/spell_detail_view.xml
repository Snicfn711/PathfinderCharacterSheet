<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/SpellName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/SpellCastingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SpellName"/>
    <TextView
        android:id="@+id/SpellRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SpellCastingTime"
        app:layout_constraintRight_toLeftOf="@id/SpellTargets"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <TextView
        android:id="@+id/SpellTargets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toRightOf="@id/SpellRange"
        app:layout_constraintTop_toBottomOf="@id/SpellCastingTime"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/SpellArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SpellRange"/>
    <TextView
        android:id="@+id/SpellDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SpellArea"/>
    <TextView
        android:id="@+id/RequiresSavingThrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SpellDuration"
        app:layout_constraintRight_toLeftOf="@id/TargetsSpellResistance"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <TextView
        android:id="@+id/TargetsSpellResistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toRightOf="@id/RequiresSavingThrow"
        app:layout_constraintTop_toBottomOf="@id/SpellDuration"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/RequiredSpellComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RequiresSavingThrow"/>
    <TextView
        android:id="@+id/SpellSchoolAndDescriptors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RequiredSpellComponents"/>
    <TextView
        android:id="@+id/SpellLongDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/colorGoldText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SpellSchoolAndDescriptors"/>
</android.support.constraint.ConstraintLayout>
