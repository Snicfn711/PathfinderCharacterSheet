<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">
    <android.support.constraint.Guideline
        android:id="@+id/AddItemToInventoryVerticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"/>
    <android.support.constraint.Guideline
        android:id="@+id/AddItemToInventoryHorizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/AddItemToInventoryViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AddItemToInventoryHorizontalGuideline">
        <android.support.v4.view.PagerTabStrip
            android:id="@+id/AddItemToInventoryPagerTabStrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/colorTransparentHeader"
            android:textColor="@color/colorPlainText"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </android.support.v4.view.ViewPager>
    <Button
        android:id="@+id/AddItemToInventoryConfirmButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/colorPlainText"
        android:text="@string/Confirm"
        app:layout_constraintLeft_toRightOf="@id/AddItemToInventoryVerticalGuideline"
        app:layout_constraintStart_toEndOf="@id/AddItemToInventoryVerticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/AddItemToInventoryHorizontalGuideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>