<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/PlayerCharacterListFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@drawable/header_border">
        <android.support.constraint.Guideline
            android:id="@+id/PlayerCharacterListVerticalGuideline"
            app:layout_constraintGuide_percent=".8"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/CharactersList"
            android:textColor="@color/colorPlainText"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/PlayerCharacterListVerticalGuideline"
            app:layout_constraintEnd_toStartOf="@id/PlayerCharacterListVerticalGuideline"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton android:id="@+id/AddNewCharacter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/add_icon"
            android:contentDescription="@string/AddNewCharacter"
            app:layout_constraintLeft_toRightOf="@id/PlayerCharacterListVerticalGuideline"
            app:layout_constraintStart_toEndOf="@id/PlayerCharacterListVerticalGuideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/PlayerCharacterRecycler"
        android:name="com.pathfinderstattracker.pathfindercharactersheet.PlayerCharacterFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:padding="5dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".viewmodels.PlayerCharacterListFragment"
        tools:listitem="@layout/player_character_row_view"/>
</LinearLayout>