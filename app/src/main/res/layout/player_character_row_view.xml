<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/field_border"
    android:layout_marginBottom="2dp">
    <android.support.constraint.Guideline
        android:id="@+id/PlayerCharacterNameHorizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"/>
    <android.support.constraint.Guideline
        android:id="@+id/PlayerCharacterRaceVerticalGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33"/>
    <android.support.constraint.Guideline
        android:id="@+id/PlayerCharacterClassVerticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66"/>
    <TextView
        android:id="@+id/PlayerCharacterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/PlayerCharacterNameHorizontalGuideline"
        android:textColor="@color/colorPlainText"
        android:text="@string/Name"/>
    <TextView
        android:id="@+id/PlayerCharacterTotalLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PlayerCharacterNameHorizontalGuideline"
        app:layout_constraintRight_toLeftOf="@id/PlayerCharacterRaceVerticalGuideLine"
        app:layout_constraintEnd_toStartOf="@id/PlayerCharacterRaceVerticalGuideLine"
        android:textColor="@color/colorPlainText"
        android:text="@string/Name"/>
    <TextView
        android:id="@+id/PlayerCharacterRace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/PlayerCharacterRaceVerticalGuideLine"
        app:layout_constraintStart_toEndOf="@id/PlayerCharacterRaceVerticalGuideLine"
        app:layout_constraintTop_toBottomOf="@id/PlayerCharacterNameHorizontalGuideline"
        app:layout_constraintRight_toLeftOf="@id/PlayerCharacterClassVerticalGuideline"
        app:layout_constraintEnd_toStartOf="@id/PlayerCharacterClassVerticalGuideline"
        android:textColor="@color/colorPlainText"
        android:text="@string/Name"/>
    <TextView
        android:id="@+id/PlayerCharacterClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/PlayerCharacterClassVerticalGuideline"
        app:layout_constraintStart_toEndOf="@id/PlayerCharacterClassVerticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/PlayerCharacterNameHorizontalGuideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorPlainText"
        android:text="@string/Name"/>

</android.support.constraint.ConstraintLayout>
